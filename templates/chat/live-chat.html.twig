{% extends 'layout.html.twig' %}

{% block page_title %}Live-Chat UNDER DEVELOPMENT!{% endblock %}

{% block page_title_actions %}
    <div class="col-auto ms-auto d-print-none">
        <div class="btn-list">
            <a href="{{ path('reset_conversation') }}" class="btn d-none d-sm-inline-block">
                {{ ux_icon('tabler:trash') }}Neustart
            </a>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <div class="container-xl">
        Foo!

        <a
            type="button"
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#store-conversation-modal"

        >Speichern
        </a>

        {% component "Tabler:Modal" with {id: 'store-conversation-modal'} %}
            {% block modal_full_content %}
                <twig:Chat:StoreConversation />
            {% endblock %}
        {% endcomponent %}
    </div>
{% endblock %}
