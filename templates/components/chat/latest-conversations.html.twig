<div {{ attributes }}>
    <div class="modal-header">
        <h3 class="modal-title">Die letzten {{ this.entries }} Gespräche ...</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <table class="table table-vcenter">
            <thead>
                <tr>
                    <td>Titel</td>
                    <td class="w-1">&nbsp;</td>
                </tr>
            </thead>
            <tbody>
                {% for entry in this.conversations %}
                    <tr>
                        <td>{{ entry.title }}</td>
                        <td>
                            <a href="{{ path('chat', {'conversationId': entry.id}) }}" title="Öffnen">Öffnen</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
