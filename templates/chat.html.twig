{% extends 'layout.html.twig' %}

{% block page_title %}Schnack mit {{ settings_handler.get.chatbotGeneral.chatbotName }}{% endblock %}

{% block page_title_actions %}
    <div class="col-auto ms-auto d-print-none">
        <div class="btn-list">
            <a href="{{ path('reset_conversation') }}" class="btn d-none d-sm-inline-block">
                {{ ux_icon('tabler:trash') }}Neustart
            </a>
            <a href="{{ path('store_conversation') }}" class="btn d-none d-sm-inline-block">
                {{ ux_icon('tabler:download') }}Speichern
            </a>
            <a href="{{ path('load_conversation') }}" class="btn d-none d-sm-inline-block">
                {{ ux_icon('tabler:upload') }}Laden
            </a>
        </div>
    </div>
{% endblock %}

{% block page_content %}
<div class="container-xl">
    <div class="row row-deck row-cards">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body" {{ stimulus_controller('hello') }}>
                    <form action="{{ path('chat') }}" method="POST">
                        <div class="input-group mb-2">
                            <input name="question" type="text" class="form-control">
                            <button class="btn" type="submit">Sach an!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {% for message in messages|reverse %}
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">{{ message.role }}</div>
                        <p>{{ message.message|markdown_to_html }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
